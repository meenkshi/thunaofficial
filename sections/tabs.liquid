    {{ block.settings.title1 }}
  {% assign colletionname =   block.settings.title %}
   {% assign limit =   section.settings.limit %} 
  
 {% for product in collections[colletionname].products limit: limit %}
      <div class="product_info page-width test"> 
        <a href="{{ product.url }}">
       <div class="product_image"><img src="{{ product.featured_image | product_img_url: 'large' }}" alt="{{ product.title | escape }}" /></div> 
        <div class="product_title">{{ product.title | escape }}</div>
       
       </a>
        </div>
      
      {% endfor %}
  </div>
    </div>
  {%endfor%}
	<div class="see_more_btn">
 <a href="{{ section.settings.link }}">
    {{ section.settings.linktext }}
    </a>
   </div>
</div>

<script>
  $(document).ready(function() {
    
    $('ul.tabs').each(function(){
      var active, content, links = $(this).find('a');
      active = $(".tabs li a:first").addClass("is-active");
      content = $(active.attr('href'));
      links.not(':first').each(function () {
        $($(this).attr('href')).hide();
      });
      $(this).find('a').click(function(e){
        active.removeClass('active');
        content.hide();
        active = $(this);
        content = $($(this).attr('href'));
        active.addClass('active');
        content.show();
        return false;
      });
    });
  });
</script>
<style>
