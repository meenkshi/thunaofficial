<style>

.titleGreen {
    color: #61A58F;
    font-size: 36px;
    text-transform: uppercase;
    letter-spacing: normal;
    text-align:center;
    margin-bottom:32px;
}
  
.questionpro {
    font-weight: 600;
    padding: 16px 50px 16px 16px;
    position: relative;
    display: flex;
    align-items: center;
    cursor: pointer;
    background: #F5F5F5;
    margin: 8px 0;
    color: #000;
    font-size: 18px;
}
  
  .questionpro::after {
    content: "\002B";
    font-size: 28px;
    position: absolute;
    right: 20px;
    transition: 0.3s;
  }

  .questionpro.active::after {
    content: "-";
    font-size: 2.2rem;
  }
  
  .answercountpro {
    display:none; 
  }
  
  .answerpro {
      padding: 16px 0;
      line-height: 1.5rem;
  }

  @media screen and (max-width:749.98px){
    .questionpro {
        padding: 14px 50px 14px 16px;
        font-size: 16px;
    }

    .titleGreen {
        font-size: 24px;
        text-align:left;
        margin-bottom:16px;
    }

    .answerpro {
        padding: 5px 0;
    }

    .faqSec {
        padding-block: 0px;
    }
  }
</style>
<div class="productfaq faqSec {{ section.settings.custom-css }}">
  <div class="page-width">
    {% if section.settings.section-subheading !=blank %}
      <h1 class="titleGreen" >
        {{ section.settings.section-subheading }}
      </h1>
    {% endif %}
    <div class="FaqSection">
     {% for block in section.blocks %}
       <div class="questionBox">
                <div class="questionpro">
                   {{block.settings.question}}
                 </div>
                <div class="answercountpro">
                  <div class="answer">
                    {{ block.settings.answer }}
                  </div>
                </div>
       </div>
        {% endfor %}
    </div>
  </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
      $(document).ready(function () {
        $(".questionpro").click(function () {
          if ($(this).hasClass("active")) {
            $(this).siblings(".answercountpro").slideUp();
            $(this).removeClass("active");
          } else {
            $(".answercountpro").slideUp();
            $(".questionpro").removeClass("active");
            $(this).toggleClass("active");
            $(this).siblings(".answercountpro").slideDown();
          }
        });
      });
    </script>
{% schema %}
{
"name": "Product Faq block",
    "settings": [ 
      {
        "type": "text",
        "id": "section-subheading",
        "label": "Faq heading"
      },
      {
        "type": "text",
        "id": "custom-css",
        "label": "Custom Css Class"
      }
],
"name": "Faq",

"blocks": [
			{
				"type": "text",
				"name": "Question",
				"settings": [
					{
						"type": "text",
						"id": "question",
						"label": "Question"
					},
					{
						"type": "liquid",
						"id": "answer",
						"label": "Answer"
					}
					
					
				]
			}
		],
       "presets": [
          {
            "name": "Product Faq block"
          }
    ]
		
	}

{% endschema %}
